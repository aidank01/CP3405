<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGcolor"
    android:orientation="vertical"
    tools:context=".ClockActivity">

    <TextView
        android:id="@+id/currentTimeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ColorThemeTitle"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/time_date_placeholder" />

    <Button
        android:id="@+id/addNewAlarmButton"
        style="@style/ColorTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/button_aqua"
        android:onClick="addNewClicked"
        android:text="@string/new_reminder" />

    <Button
        android:id="@+id/viewContactsButton"
        style="@style/ColorTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/button_aqua"
        android:onClick="viewAlarmsClicked"
        android:text="@string/view_reminders" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            android:gravity="end"
            android:onClick="onBackPressed"
            android:text="@string/back"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>