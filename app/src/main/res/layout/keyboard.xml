<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/kbButtonDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_input_delete"
                android:background="@drawable/button_red"
                style="@style/ColorTheme"
                android:contentDescription="@string/delete_arrow" />
            <Button
                android:id="@+id/kbButton2"
                style="@style/CustomKeyboardColorTheme"
                android:background="@drawable/button_blue"
                android:text="@string/abc" />
            <Button
                android:id="@+id/kbButton3"
                style="@style/CustomKeyboardColorTheme"
                android:background="@drawable/button_blue"
                android:text="@string/def" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/kbButton4"
                style="@style/CustomKeyboardColorTheme"
                android:background="@drawable/button_blue"
                android:text="@string/ghi" />
            <Button
                android:id="@+id/kbButton5"
                style="@style/CustomKeyboardColorTheme"
                android:background="@drawable/button_blue"
                android:text="@string/jkl" />
            <Button
                android:id="@+id/kbButton6"
                style="@style/CustomKeyboardColorTheme"
                android:background="@drawable/button_blue"
                android:text="@string/mno" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/kbButton7"
                style="@style/CustomKeyboardColorTheme"
                android:background="@drawable/button_blue"
                android:text="@string/pqrs" />
            <Button
                android:id="@+id/kbButton8"
                style="@style/CustomKeyboardColorTheme"
                android:background="@drawable/button_blue"
                android:text="@string/tuvw" />
            <Button
                android:id="@+id/kbButton9"
                style="@style/CustomKeyboardColorTheme"
                android:background="@drawable/button_blue"
                android:text="@string/xyz_" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/kbButtonNums"
                style="@style/CustomKeyboardColorTheme"
                android:background="@drawable/button_blue"
                android:text="@string/_1_2_3" />
            <Button
                android:id="@+id/kbButtonCaps"
                style="@style/CustomKeyboardColorTheme"
                android:background="@drawable/button_blue"
                android:text="@string/aa" />
            <Button
                android:id="@+id/kbButtonEnter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/enter"
                android:background="@drawable/button_green"
                android:gravity="center"
                style="@style/ColorTheme"/>
        </LinearLayout>
    </LinearLayout>
</merge>