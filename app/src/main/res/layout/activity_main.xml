<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BGcolor"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <!--Place holder-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="92dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/phone_icon"
                    app:srcCompat="@android:drawable/ic_menu_call" />

                <Button
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_aqua"
                    android:onClick="callClicked"
                    android:text="@string/call" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contacts_icon"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar" />

                <Button
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_aqua"
                    android:onClick="contactsClicked"
                    android:text="@string/contacts" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/messaging_icon"
                    app:srcCompat="@android:drawable/stat_notify_chat" />

                <Button
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_aqua"
                    android:text="@string/messaging"
                    android:onClick="messagingClicked" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/flashlight_icon"
                    app:srcCompat="@drawable/torch" />

                <Button
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_aqua"
                    android:onClick="flashlightClicked"
                    android:text="@string/flashlight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/camera_icon"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

                <Button
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_aqua"
                    android:text="@string/camera" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"

                    android:contentDescription="@string/clock_icon"
                    app:srcCompat="@android:drawable/ic_menu_recent_history" />

                <Button
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_aqua"
                    android:onClick="clockClicked"
                    android:text="@string/clock" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/calendar_icon"
                    app:srcCompat="@android:drawable/ic_menu_today" />

                <Button
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_aqua"
                    android:onClick="calendarClicked"
                    android:text="@string/calendar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/email_icon"
                    app:srcCompat="@android:drawable/ic_dialog_email" />

                <Button
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_aqua"
                    android:text="@string/emailMenu" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--Top Emergency Bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:onClick="emergencyClicked"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/phone_icon"
                android:src="@drawable/phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/call_n000"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_blue"
                android:gravity="center"
                android:onClick="emiClicked"
                android:text="@string/emi"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:ignore="NestedWeights" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_green"
                android:gravity="center"
                android:text="@string/tutorial"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <!--Grey out behind view-->
    <LinearLayout
        android:id="@+id/greyScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        android:orientation="vertical"
        android:visibility="invisible" />

    <!--Central Emergency Confirmation-->
    <LinearLayout
        android:id="@+id/emergencyConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorOffRed"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="invisible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/image_of_a_phone_calling"
            android:src="@drawable/phone_calling" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:text="@string/calling_000"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_red"
                android:onClick="cancelEmergency"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="28sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_green"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="28sp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>